<h2 class="search">Search Author</h2>
<form class="search1" action="/authors" method="GET">
    <label style="margin-right:10px;">Name</label>
    <input style="margin-right:10px;" type="text" name="name" value="<%= searchOptions %>">
    <button type="submit">Search</button>
</form>

<br>
<% authors.forEach(author =>{ %>
    <div style="margin-top:10px;" class="search1"><%= author.name%></div>
    <div class="search1">
        <a style="margin-right:10px;" href="/authors/<%= author.id %>">view</a>
        <a href="/authors/<%= author.id %>/edit">edit</a>
    </div>
    <%- include("../partials/delete_form" ,{ url : `/authors/${author.id}`})%>
<% })%>

