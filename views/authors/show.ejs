<h2>
    <%= author.name %>
</h2>
<a href="/authors/<%= author.id %>/edit">edit</a>
<%- include("../partials/delete_form" ,{ url : `/authors/${author.id}`})%>
<% if(bookByAuthor.length> 0) { %>
    <h2>Books by Author</h2>
    <% bookByAuthor.forEach( book=>{ %>
        <a href="/books/<%= book.id %>" ><img src="<%= book.CoverImagePath %>" alt="img" width="100" height="150"></a>
    <% }) %>
<% } %>